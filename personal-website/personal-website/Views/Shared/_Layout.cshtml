<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap-utilities.css" rel="stylesheet" />

    <style>
        .header-margin {
            margin-top: 30px !important;
        }
        .section-margin {
            margin-top: 50px !important;
            margin-bottom: 20px !important;
        }
        .nav-margin {
            margin-top: 0px !important;
        }
        .event-card {
            width: 450px !important;
            margin-top: 20px !important;
        }
        .image-card {
            width: 250px !important;
        }
    </style>
</head>
<body>
    <!--This is the code for the navbar -->

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <nav class="navbar navbar-expand-lg bg-dark py-3 nav-margin fixed-top" data-bs-theme="dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse justify-content-center" id="nav-content">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item mx-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-light">About</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a asp-controller="Home" asp-action="Timeline" class="btn btn-light">A Timeline</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a asp-controller="Home" asp-action="Photography" class="btn btn-light">Photography</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a href="~/docs/resume.pdf" target="_blank" class="btn btn-light">Resume</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!--this is the main content section of the website -->
    <div class="container" style="padding: 80px;">
        <!--NOTE: This is where the code from the main view is inserted -->
        @RenderBody()
    </div>

    <!--This code references different script libraries to make your page responsive -->
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>